<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:background="@color/body">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <View
                android:id="@+id/v_oval"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/shape_oval"
                android:backgroundTint="@color/ingre4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/noto_sans_medium"
                android:textSize="10dp"
                android:textColor="@color/colorWhite"
                android:text="item"
                app:layout_constraintStart_toEndOf="@id/v_oval"
                app:layout_constraintTop_toTopOf="@id/v_oval"
                app:layout_constraintBottom_toBottomOf="@id/v_oval"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>