<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBlack">

        <ImageView
            android:id="@+id/iv_main_content"
            android:layout_width="0dp"
            android:layout_height="214dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.93"
            android:background="@drawable/custom_round_background_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tag"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_main_content"
            app:layout_constraintEnd_toEndOf="@id/iv_main_content"
            app:layout_constraintStart_toStartOf="@id/iv_main_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_main_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="2dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_first"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toStartOf="@id/iv_main_content"
            app:layout_constraintTop_toBottomOf="@id/iv_main_content"
            android:background="@drawable/ic_oval_d"
            android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drinks_soju_main"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_second"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/ctl_first"
            app:layout_constraintTop_toBottomOf="@id/iv_main_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/ic_oval_d"
            android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drinks_soju_main"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_third"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/ctl_second"
            app:layout_constraintTop_toBottomOf="@id/iv_main_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/ic_oval_d"
            android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/iv_third"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drinks_wine_0"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_more"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/ctl_third"
            app:layout_constraintTop_toBottomOf="@id/iv_main_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/ic_oval_d"
            android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drinks_more"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="@id/iv_main_content"
            app:layout_constraintTop_toBottomOf="@id/iv_main_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_heart_false"
            android:scaleType="fitCenter"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>