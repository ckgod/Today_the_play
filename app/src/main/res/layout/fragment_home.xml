<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBlack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_top_bar"
            android:layout_width="0dp"
            android:layout_height="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_tab"
                android:layout_width="200dp"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNull"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tabIndicatorHeight="0dp"
                app:tabGravity="start"
                app:tabMode="fixed"
                app:tabRippleColor="@color/colorNull"
                app:tabSelectedTextColor="@color/colorWhite"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/tabfalse"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/ll_divider"
                android:layout_width="0dp"
                android:layout_height="19dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/tl_tab"
                app:layout_constraintBottom_toBottomOf="@id/tl_tab"
                app:layout_constraintTop_toTopOf="@id/tl_tab"
                app:layout_constraintEnd_toEndOf="@id/tl_tab"
                android:gravity="center_vertical">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="130"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/line_stroke_1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_alarm"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_alarm_active"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="@id/btn_alarm"
                app:layout_constraintEnd_toStartOf="@id/btn_alarm"
                android:layout_marginEnd="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/mainBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ctl_top_bar"
            app:layout_constraintVertical_weight="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>