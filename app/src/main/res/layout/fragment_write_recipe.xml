<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBlack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_top_bar"
            android:layout_width="0dp"
            android:layout_height="62dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17.7dp"
                android:src="@drawable/ic_go_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="16.7dp"
                android:fontFamily="@font/noto_sans_black"
                android:text="@string/write_recipe_title"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ctl_top_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctl_main_content"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:background="@drawable/custom_round_background_black_14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp"
                    android:paddingEnd="10dp">
                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_drinks_wine_0"
                        android:backgroundTint="@color/mainColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_name"
                        android:layout_marginStart="4dp"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_medium"
                        android:textSize="12dp"
                        android:textColor="@color/colorWhite"
                        android:text="펜폴츠 뱅쇼"
                        app:layout_constraintStart_toEndOf="@id/iv_icon"
                        app:layout_constraintTop_toTopOf="@id/iv_icon"
                        app:layout_constraintBottom_toBottomOf="@id/iv_icon"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_medium"
                    android:textSize="10dp"
                    android:textColor="@color/mainForText"
                    android:text="@string/write_recipe_tag_hint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ctl_main_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="22dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recipes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:stateListAnimator="@color/colorNull"
                    app:layout_constraintStart_toStartOf="@id/tv_tag"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_tag"
                    android:layout_marginTop="13dp"/>

                <ImageView
                    android:id="@+id/btn_plus_recipe"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_recipe_plus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_recipes"
                    android:layout_marginTop="36dp"/>

                <TextView
                    android:id="@+id/tv_wrtie_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_medium"
                    android:textSize="10dp"
                    android:textColor="@color/subGray"
                    android:text="@string/write_recipe_content_hint"
                    app:layout_constraintStart_toStartOf="@id/tv_tag"
                    app:layout_constraintTop_toBottomOf="@id/btn_plus_recipe"
                    android:layout_marginTop="52dp"/>

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/rv_recipes_ex"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:stateListAnimator="@color/colorNull"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@id/tv_wrtie_tag"-->
<!--                    android:layout_marginTop="23dp"/>-->

                <LinearLayout
                    android:id="@+id/ll_step_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_wrtie_tag"
                    android:layout_marginTop="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_step_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="0"
                        android:paddingBottom="12dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ctl_number_1"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="27dp"
                            android:background="@drawable/bg_rectangle_small"
                            android:layout_marginTop="6dp">
                            <TextView
                                android:id="@+id/tv_step_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans_medium"
                                android:textSize="15dp"
                                android:textColor="@color/subGray"
                                android:text="1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <EditText
                            android:id="@+id/et_content_1"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNull"
                            android:hint="@string/write_recipe_info"
                            android:fontFamily="@font/noto_sans_medium"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:textSize="12dp"
                            android:contentDescription="0"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/subGray"
                            app:layout_constraintStart_toEndOf="@id/ctl_number_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ctl_number_1"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="38dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_step_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:contentDescription="1"
                        android:visibility="gone">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ctl_number_2"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="27dp"
                            android:background="@drawable/bg_rectangle_small"
                            android:layout_marginTop="6dp">
                            <TextView
                                android:id="@+id/tv_step_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans_medium"
                                android:textSize="15dp"
                                android:textColor="@color/subGray"
                                android:text="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <EditText
                            android:id="@+id/et_content_2"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNull"
                            android:hint="@string/write_recipe_info"
                            android:fontFamily="@font/noto_sans_medium"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:textSize="12dp"
                            android:contentDescription="1"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/subGray"
                            app:layout_constraintStart_toEndOf="@id/ctl_number_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ctl_number_2"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="38dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_step_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="2"
                        android:paddingBottom="12dp"
                        android:visibility="gone">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ctl_number_3"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="27dp"
                            android:background="@drawable/bg_rectangle_small"
                            android:layout_marginTop="6dp">
                            <TextView
                                android:id="@+id/tv_step_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans_medium"
                                android:textSize="15dp"
                                android:textColor="@color/subGray"
                                android:text="3"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <EditText
                            android:id="@+id/et_content_3"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNull"
                            android:hint="@string/write_recipe_info"
                            android:fontFamily="@font/noto_sans_medium"
                            android:imeOptions="actionDone"
                            android:contentDescription="2"
                            android:inputType="textNoSuggestions"
                            android:textSize="12dp"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/subGray"
                            app:layout_constraintStart_toEndOf="@id/ctl_number_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ctl_number_3"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="38dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_step_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:contentDescription="3"
                        android:visibility="gone">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ctl_number_4"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="27dp"
                            android:background="@drawable/bg_rectangle_small"
                            android:layout_marginTop="6dp">
                            <TextView
                                android:id="@+id/tv_step_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans_medium"
                                android:textSize="15dp"
                                android:textColor="@color/subGray"
                                android:text="4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <EditText
                            android:id="@+id/et_content_4"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNull"
                            android:hint="@string/write_recipe_info"
                            android:fontFamily="@font/noto_sans_medium"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:textSize="12dp"
                            android:contentDescription="3"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/subGray"
                            app:layout_constraintStart_toEndOf="@id/ctl_number_4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ctl_number_4"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="38dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_step_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="4"
                        android:paddingBottom="12dp"
                        android:visibility="gone">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ctl_number_5"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="27dp"
                            android:background="@drawable/bg_rectangle_small"
                            android:layout_marginTop="6dp">
                            <TextView
                                android:id="@+id/tv_step_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans_medium"
                                android:textSize="15dp"
                                android:textColor="@color/subGray"
                                android:text="5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <EditText
                            android:id="@+id/et_content_5"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNull"
                            android:hint="@string/write_recipe_info"
                            android:fontFamily="@font/noto_sans_medium"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:textSize="12dp"
                            android:contentDescription="4"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/subGray"
                            app:layout_constraintStart_toEndOf="@id/ctl_number_5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/ctl_number_5"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="38dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_plus_stair"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_plus_recipe_false"
                    app:layout_constraintTop_toBottomOf="@id/ll_step_container"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_complete"
                    android:layout_width="0dp"
                    android:layout_height="66dp"
                    android:background="@drawable/bg_search_dark_blue"
                    android:backgroundTint="@color/body"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_plus_stair"
                    android:layout_marginTop="38dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_medium"
                        android:textSize="15dp"
                        android:textColor="@color/mainForText"
                        android:text="@string/complete"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>