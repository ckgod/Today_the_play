<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBlack">

        <ImageView
            android:id="@+id/iv_my_page_good"
            android:layout_width="0dp"
            android:layout_height="214dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.93"
            android:background="@drawable/custom_round_background_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="3dp"/>

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart_true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="@id/iv_my_page_good"
            app:layout_constraintBottom_toBottomOf="@id/iv_my_page_good"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>