<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBlack">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eland_nice_medium"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:text="@string/login_find_pw"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34.7dp"/>


        <LinearLayout
            android:id="@+id/ll_email_container"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/custom_round_edittext_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="109dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ttt@tt.ttt"
                android:fontFamily="@font/eland_nice_medium"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_find_pw_complete_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/find_pw_complete_info"
            android:fontFamily="@font/noto_sans_black"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_email_container"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="23dp"
            android:textAlignment="viewStart"/>
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/custom_round_button_default"
            android:backgroundTint="@color/mainColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_find_pw_complete_info"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/eland_nice_medium"
            android:textSize="20dp"
            android:textColor="@color/mainBlack"
            android:text="@string/login_login"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>