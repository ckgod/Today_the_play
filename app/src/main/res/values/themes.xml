<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Aos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/colorLightGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/mainBlack</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_white_top_radius_16dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/eland_nice_medium</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="tab_my_page_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="tab_my_page_follow" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="numberPickerCustomSize">
        <!--Display textSize-->
        <item name="android:textSize">12dp</item>
        <item name="android:colorControlNormal">@color/transparent</item>
        <!--Display textColor-->
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/noto_sans_medium</item>
    </style>

